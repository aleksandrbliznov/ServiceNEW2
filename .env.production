# Production Environment Configuration for Radicenter
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-characters
SQLALCHEMY_DATABASE_URI=mysql://username:password@localhost:3306/servicepro_db
FLASK_ENV=production

# Email Configuration (configure with your SMTP provider)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Application Settings
UPLOAD_FOLDER=static/uploads
BABEL_DEFAULT_LOCALE=et
BABEL_SUPPORTED_LOCALES=et,en,ru

# Security Settings (Production)
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
PERMANENT_SESSION_LIFETIME=3600

# Production Optimizations
FLASK_DEBUG=False

# Domain Configuration
ALLOWED_ORIGINS=https://lexanco.eu,https://servicepro.lexanco.eu,http://lexanco.eu,http://servicepro.lexanco.eu

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/service.log